<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="stylesheet" href="/css/publishers.css" type="text/css">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <title>Publishers | Manga[kan]</title>
</head>
<body>
    <%- include("partials/navbar")%>
    <div class="main-page">
        <% if(locals.flag === true){%>
            <%- include("partials/publisherForm",{errors:locals.errors})%>
        <%} else{%>
            <div class="editor">
                <a href="publishers/add">Add new publisher</a>
            </div>
        <%}%>

        <%rows.forEach((row,index) => {%>
            <div class="box">
                <div>
                    <h2><%=(index + 1) + ". "%> <%=row.publisher_name%></h2>
                    <p>Country: <%= row.publisher_country%></p>
                </div>
                <div>
                    <form action="/publishers/delete/<%= row.publisher_id %>" method="POST">
                        <button class="button-link">Delete</button>
                    </form>
                    <a class="edit-link" href="/publishers/update/<%= row.publisher_id%>">Edit</a>
                </div>
            </div>
        <%})%>
    </div>
</body>
</html>