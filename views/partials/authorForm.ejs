<form class="author-form" action="/authors/add" method="POST">
    <h3>Add new author</h3>
    <%- include("errors")%>
    <div>
        <label for="author_fullname">Fullname: </label>
        <input type="text" name="author_fullname" id="author_fullname" placeholder="Enter fullname">
    </div>

    <div>
        <label for="author_age">Age: </label>
        <input type="number" name="author_age" id="author_age" placeholder="Enter age">
    </div>

    <div>
        <label for="author_gender">Gender: </label>
        <select name="author_gender" id="author_gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div>
        <label for="author_country_of_origin">Country of origin: </label>
        <input type="text" name="author_country_of_origin" id="author_country_of_origin" placeholder="Enter country of origin">
    </div>

    <div>
        <button>Add</button>
        <button type="reset">Reset</button>
        <a href="/authors">Close</a>
    </div>
</form>